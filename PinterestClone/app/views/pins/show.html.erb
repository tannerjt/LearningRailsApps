<div id="pin_show" class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading pin_image">
        <%= image_tag @pin.image.url(:medium) if @pin.image? %>
      </div>
      <div class="panel-body">
        <h1><%= @pin.title %></h1>
        <p class="description">
          <%= @pin.description %>
        </p>
        <p>
          Submitted by: <%= @pin.user.email %>
        </p>
        <%= link_to 'Back', root_path %>
        <%= link_to like_pin_path(@pin), method: :put, class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-heart"> </span> <%= @pin.get_upvotes.size %>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_pin_path %>
          <%= link_to 'Delete', pin_path, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
